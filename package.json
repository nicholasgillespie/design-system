{
  "name": "ng-design-system",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start:dev": "concurrently \"npm run compile:sass\" \"npm run start:server:dev\"",
    "start:server:dev": "nodemon --env-file=config.env server.js",
    "compile:sass": "sass --watch frontend/public/scss/styles/index.scss:frontend/public/css/index.css",
    "start": "concurrently \"npm run build:sass\" \"npm run start:server\"",
    "start:server": "node --env-file=config.env server.js",
    "build:sass": "sass frontend/public/scss/styles/index.scss:frontend/public/css/index.css"
  },
  "author": "nicholas gillespie",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "sass": "^1.69.5"
  }
}
